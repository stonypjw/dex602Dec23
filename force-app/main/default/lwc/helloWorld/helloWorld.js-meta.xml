<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>58.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Hello World Component</masterLabel>
    <description>Display a friendly greeting</description>
    <targets>
        <target> lightning__AppPage</target>
        <target> lightning__RecordPage</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__AppPage, lightning__RecordPage">
            <property name="firstName" type="String" default="World" label="Person or Thing To Greet"
                 description="Sets the word that is displayed after Hello"></property>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>